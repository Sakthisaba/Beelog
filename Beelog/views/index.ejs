     <% if(blogs.length>0){ %>
        <%  const blogrev = blogs.reverse(); %>
        <% blogrev.forEach(blog=>{ %>
            <form method="post" class=" p-2 m-2" action="/show">
            <div class="m-2 p-3 bg-primary text-white rounded div overflow-hidden" id="d1">
             <h2  ><%=blog.title%></h2> 
             <p ><%=blog.body%></p> 
